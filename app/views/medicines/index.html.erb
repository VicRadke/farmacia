<p id="notice"><%= notice %></p>

<h1>Medicinas</h1>

<table>
  <thead>
    <tr>
      <th>Medicina</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th>Patente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicines.each do |medicine| %>
      <tr>
        <td><%= medicine.name %></td>
        <td><%= medicine.price %></td>
        <td><%= medicine.quantity %></td>
        <td><%= medicine.patent %></td>
        <td><%= link_to 'Mostrar', medicine %></td>
        <td><%= link_to 'Editar', edit_medicine_path(medicine) %></td>
        <td><%= link_to 'Eliminar', medicine, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Medicina', new_medicine_path %>
